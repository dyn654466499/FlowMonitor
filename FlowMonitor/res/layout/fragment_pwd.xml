<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iamgeView_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:src="@drawable/login_fastlogin_code" />

    <com.ourwork.customview.CustomEditText
        android:id="@+id/editText_password"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:background="@drawable/frame"
        android:hint="@string/inputPwd"
        android:inputType="textPassword"
        android:textSize="15sp"
        android:maxLength="12"
        android:drawableRight="@drawable/submit_edit_clear_pressed"
        android:paddingRight="15dp"  
        android:textCursorDrawable="@null" 
        android:paddingLeft="15dp" >
    </com.ourwork.customview.CustomEditText>

    <ImageButton
        android:id="@+id/imageButton_showPwd"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@null"
        android:src="@drawable/bd_wallet_pp_icon"
         />

</LinearLayout>